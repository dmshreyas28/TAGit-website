rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Allow user to read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to read any user profile (for emergency access)
      allow read: if request.auth != null;
    }
    
    // Public read access for emergency responders (optional - for NFC scanning)
    match /users/{userId} {
      allow read: if true; // Public read for emergency scenarios
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
